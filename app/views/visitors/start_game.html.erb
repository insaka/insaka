  <br>
</div>


<style type="text/css">
  .game-container {
    background-color: #1582c1d1;
    border: 2px #1582c1d1;
  }
  .white {
    color: #fff;
  }
  .mt-20 {
    margin-top: 20px;
  }
  .mt-45 {
    margin-top: 45px;
  }
  .mt-100 {
    margin-top: 100px;
  }
  .mb-45 {
    margin-bottom: 45px;
  }
  .page {
    display: none;
  }
  .active {
    display: block;
  }
</style>

<script type="text/javascript">
  $('#start, #next').on('click', function(){
    $(this).closest('.page').next().addClass('active');
    $(this).closest('.page').removeClass('active')
  });

  $('#yes, #no').on("click", function(){
    let next_page = '.'+$(this).data('templateName');
    $(next_page).addClass('active');
    $(this).closest('.page').removeClass('active');
  });

  $(".back-start").on("click", function(){
    $(".first-page").addClass('active');
    $(this).closest('.page').removeClass('active')
  })
